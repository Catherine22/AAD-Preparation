<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AppComponentsActivity"
    tools:showIn="@layout/app_bar_main">

    <RadioGroup
        android:id="@+id/rg_service_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_area_margin_width"
        android:layout_marginEnd="@dimen/safe_area_margin_width"
        android:checkedButton="@id/rbn_foreground_service"
        android:text="@string/start_service">

        <RadioButton
            android:id="@+id/rbn_foreground_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foreground_service" />

        <RadioButton
            android:id="@+id/rbn_job_scheduler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_scheduler" />
    </RadioGroup>

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_start_service"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_area_margin_width"
        android:layout_marginEnd="@dimen/safe_area_margin_width"
        android:text="@string/start_service" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_stop_service"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_area_margin_width"
        android:layout_marginEnd="@dimen/safe_area_margin_width"
        android:text="@string/stop_service" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_broadcast_receivers"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_area_margin_width"
        android:layout_marginEnd="@dimen/safe_area_margin_width"
        android:text="@string/start_broadcast" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_content_providers"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/safe_area_margin_width"
        android:layout_marginEnd="@dimen/safe_area_margin_width"
        android:text="@string/content_providers" />

</LinearLayout>
