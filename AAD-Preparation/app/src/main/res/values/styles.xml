<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Fixed the title of AppBar not changing color pattern while day/night mode switches-->
    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />
    <!--Fixed menu not changing color pattern while day/night mode switches-->
    <style name="AppTheme.PopupOverlay" parent="AppTheme" />

    <style name="item_title" parent="AppTheme.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/safe_area_margin_width</item>
        <item name="android:layout_marginRight">@dimen/safe_area_margin_width</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_subtitle" parent="AppTheme.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/safe_area_margin_width</item>
        <item name="android:layout_marginRight">@dimen/safe_area_margin_width</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="small_bottom" parent="AppTheme.DayNight">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_default_bottom_selector</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/safe_area_margin_width</item>
        <item name="android:layout_marginRight">@dimen/safe_area_margin_width</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="single_line_edittext" parent="AppTheme.DayNight">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/safe_area_margin_width</item>
        <item name="android:layout_marginRight">@dimen/safe_area_margin_width</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>
